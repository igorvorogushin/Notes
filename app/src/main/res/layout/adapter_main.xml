<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/adapter__mynotes_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:foreground="@drawable/highlight"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="1dp"
        card_view:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/adapter__mynotes_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="name"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/text_title2" />

            <TextView
                android:id="@+id/adapter__mynotes_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="text"
                android:textColor="@color/colorTextSecondary"
                android:textSize="@dimen/text_main" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/adapter__mynotes_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="time1"
                    android:textColor="@color/colorTextHint"
                    android:textSize="@dimen/text_small" />


                <TextView
                    android:id="@+id/adapter__mynotes_time2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:singleLine="true"
                    android:text="time2"
                    android:textColor="@color/colorTextHint"
                    android:textSize="@dimen/text_small" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <ImageButton
                android:id="@+id/adapter__mynotes_remove"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/highlight"
                android:clickable="true"
                android:src="@android:drawable/ic_menu_close_clear_cancel" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>